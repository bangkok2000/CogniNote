<?xml version="1.0" encoding="utf-8"?>
<data-extraction-rules>
    <cloud-backup>
        <!-- Exclude encrypted database -->
        <exclude domain="database" path="cogninote_database" />
        <exclude domain="database" path="cogninote_database-shm" />
        <exclude domain="database" path="cogninote_database-wal" />
        
        <!-- Exclude sensitive preferences -->
        <exclude domain="sharedpref" path="biometric_prefs.xml" />
    </cloud-backup>
    
    <device-transfer>
        <!-- Allow device transfer but exclude sensitive data -->
        <exclude domain="database" path="cogninote_database" />
        <exclude domain="sharedpref" path="biometric_prefs.xml" />
    </device-transfer>
</data-extraction-rules>
